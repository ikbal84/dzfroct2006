    </head>


    <body class="full">
        <header>
            @Html.Partial("~/Views/Shared/_NavBarPartial.cshtml");
        </header>
        <div id="body" class="container-fluid">
            
             @RenderBody()

       </div>
        <footer></footer>
        <script type="text/javascript">
            $(document).ready(function () {
                
                var CookieParser = document.cookie.split('=') ;
                var currLanguage = CookieParser[CookieParser.length - 1];
                if (currLanguage == "fr") {
                    $("#liFrLangue").hide();
                    $("#liEnLangue").show();
                }
                else {
                    $("#liFrLangue").show();
                    $("#liEnLangue").hide();
                }


            });


        </script>
    </body>
</html>
