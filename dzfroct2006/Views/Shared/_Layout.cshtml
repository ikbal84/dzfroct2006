        <link rel="stylesheet" href="~/Content/slider/jquery.bxslider.css" />
        <link rel="stylesheet" href="~/Content/home.css" />

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
